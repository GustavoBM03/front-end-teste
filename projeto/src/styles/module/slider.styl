.slider
  height: 100%

  h2
    color: $blue-lagoon
    font-size: 18px
    font-weight: normal

  p
    font-size: 14px
    text-align: left
    color: #666666

.slide-item
  border: 1px solid $white-smoke
  radius(3px)
  -webkit-box-shadow: 0px 1px 10px -4px rgba(0, 0, 0, 0.75);
  -moz-box-shadow: 0px 1px 10px -4px rgba(0, 0, 0, 0.75);
  box-shadow: 0px 1px 10px -4px rgba(0, 0, 0, 0.75);
