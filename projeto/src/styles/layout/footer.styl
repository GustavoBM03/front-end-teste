footer
  background: $white-smoke
  font-size: 12px
  color: $dim-gray
  text-align: center
  float: left
  width: 100%

  +media-query( all, min-width $desktop )
    padding: 10px 20px

  a
    text-decoration: none
    color: inherit

    &:hover
      text-decoration: underline

.social-icons
  list-inline()

  +media-query( all, min-width $desktop )
    display: inline-block
    float: right

  span
    display: none

  ul
    li
      background: $light-gray
      margin: 10px
      line-height: 38px
      text-align: center
      height: 40px
      width: 40px
      radius(50%)

  .icon
    font-family: "Viva icons"

    &.facebook
      &:before
        content: "\f10d"

    &.instagram
      &:before
        content: "\f10d"

    &.pinterest
      &:before
        content: "\f10d"

    &.google-plus
      &:before
        content: "\f10d"

.copyright
  text-align: left
  margin: 0 auto
  padding: 0 20px

  +media-query( all, min-width $desktop )
    display: inline-block

  p
    margin: 0


.site-map
  padding-top: 10px
  list-inline()

  a
    font-weight: 400
    padding-right: 10px

.partners
  padding-top: 20px
  list-inline()

  +media-query( all, min-width $desktop )
    display: inline-block
    float: left
