footer
  display: block
  background: $white-smoke
  font-size: 12px
  color: $dim-gray
  text-align: center

  a
    text-decoration: none
    color: inherit

    &:hover
      text-decoration: underline

.social-icons
  list-inline()

  span
    display: none

  ul
    li
      background: $light-gray
      margin: 10px
      line-height: 38px
      text-align: center
      height: 40px
      width: 40px
      radius(50%)

  .icon
    font-family: "Viva icons"

    &.facebook
      &:before
        content: "\f10d"

    &.instagram
      &:before
        content: "\f10d"

    &.pinterest
      &:before
        content: "\f10d"

    &.google-plus
      &:before
        content: "\f10d"

.copyright
  width: 80%
  text-align: left
  margin: 0 auto

  p
    margin: 0


.site-map
  padding-top: 20px
  list-inline()

.partners
  padding-top: 20px
  list-inline()
