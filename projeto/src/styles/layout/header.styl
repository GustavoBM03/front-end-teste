header
  color: $dark-gray
  font-size: 10px
  text-align: center
  height: 70px
  width: 100%

  +media-query( all, min-width $tablet )
    color: $white
    float: left
    position: relative
    z-index: 2
    text-align: left
    padding-left: 20px

  p
    font-weight: 400
    
  nav
    display: none

    a
      text-decoration: none
      color: inherit
      font-size: 12px
      padding-left: 10px
      font-weight: 400

      &:hover
        text-decoration: underline

    +media-query( all, min-width $tablet )
      display: inline-block
      float: right
      list-inline()
      width: 75%

  .logo
    display: inline-block
    background: url('../img/320/logo-viva-decora.png') center no-repeat
    height: 25px
    width: 100%

    +media-query( all, min-width 640px )
      background: url('../img/768/logo-chamada.svg') left no-repeat
      text-align: left
      height: 70px
      width: 25%
      margin-top: -20px
