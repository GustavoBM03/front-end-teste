.call
  background: url('../img/320/cozinha-vista-janela.png') no-repeat
  background-size: cover
  color: $white
  font-size: 14px
  padding: 10px
  width: 100%
  height: 320px
  position: relative
  padding: 0

  +media-query( all, min-width $tablet )
    background: url('../img/768/cozinha-vista-janela@3x.png') no-repeat
    background-size: cover
    height: 410px

  +media-query( all, min-width $desktop )
    background: url('../img/1024/bitmap@3x.png') no-repeat
    background-size: cover
    height: 460px

  &:before
    content: ''
    display: block
    position: absolute
    width: 100%
    height: 95.5%
    background: $summer-sky
    opacity: 0.69
    top: 1px

    +media-query( all, min-width $tablet )
      height: 100%
      top: 0

  &:after
    arrow(12px, 11px, 13px, $summer-sky)
    bottom: 0px
    left: 47%
    opacity: 0.5

    +media-query( all, min-width $tablet )
      arrow(10px, 10px, 15px, $summer-sky)
      bottom: -15px

.call-item
  position: relative
  z-index: 1

.caller
  display: block
  height: 110px
  padding: 28px 15px
  line-height: 15px
  text-align: center
  font-weight: 400

  +media-query( all, min-width $tablet )
    float: left
    font-size: 24px
    line-height: 30px
    text-align: left
    width: 60%

  +media-query( all, min-width $desktop )
    width: 30%

.social-box
  text-align: center
  position: absolute
  z-index: 1
  bottom: 30px
  left: 10px

  a
    margin-left: 5px

  p
    text-align: left
    padding-left: 7px
    margin: 5px 0
    font-weight: 400

    +media-query( all, min-width $tablet )
      font-size: 18px

.how-it-works
  height: 410px
  text-align: center
  padding-left: 10px
  position: relative

  +media-query( all, min-width $tablet )
    height: 450px
    padding-left: 5px

  +media-query( all, min-width $desktop )
    padding: 0 20px;

  &:after
    arrow(11px, 11px, 12px, $white)
    bottom: -28px
    left: 47.5%

  h1
    font-size: 18px
    color: $blue-lagoon

    +media-query( all, min-width $tablet )
      font-size: 24px
      padding-top: 20px

  .slider
    li
      +media-query( all, min-width $tablet )
        transform: none!important
        position: relative
        width: 33%

  .slide-item
    width: 295px
    height: 370px
    padding: 0 10px

    +media-query( all, min-width $tablet )
      width: 240px

    +media-query( all, min-width $desktop )
      width: 310px

.featured
  background: $white-smoke
  text-align: center

  &:after
    arrow(11px, 11px, 12px, $white-smoke)
    left: 47.5%

  h1
    color: $dim-gray
    font-size: 24px
    padding-top: 30px

  img
    width: 275px
    margin-bottom: 15px

    +media-query( all, min-width $tablet )
      width: 160px

    +media-query( all, min-width $desktop )
      width: 230px
      margin: 20px 5px

.is-to
  padding: 20px 0
  position: relative

  &:after
    arrow(11px, 11px, 12px, $white)
    left: 47.5%
    bottom: -12px

  h1
    font-size: 18px

    +media-query( all, min-width $tablet )
      font-size: 24px

  p
    font-size: 14px

    +media-query( all, min-width $tablet )
      font-size: 18px

  img
    display: table-cell
    vertical-align: top
    padding: 10px

    +media-query( all, min-width $tablet )
      width: 140px

.is-to-content
  display: inline-block
  width: 70%

  +media-query( all, min-width $tablet )
    width: 45%

  h1, p
    color: $dim-gray


.img-container
  display: table
  float: left
  width: 30%

  +media-query( all, min-width $tablet )
    display: inline-block
    width: 40%

.users
  .img-container
    +media-query( all, min-width $desktop )
      padding-left: 70px

  img
    +media-query( all, min-width $tablet )
      margin-left: 80px

.creatives
  +media-query( all, min-width $tablet )
    margin-right: 25px
    text-align: right

  .is-to-content
    +media-query( all, min-width $desktop )
      padding-right: 70px

  .img-container
    +media-query( all, min-width $tablet )
      float: right

  img
    +media-query( all, min-width $tablet )
      width: 210px
