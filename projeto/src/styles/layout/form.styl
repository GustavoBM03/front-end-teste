.contact
  background-color: rgba(0,89,140,1);
  background-image: linear-gradient( -10deg, #00598c, #004466 )
  color: $white
  font-family: "Roboto-Regular"
  padding: 10px
  height: auto
  float: left
  width: 100%

  h1
    font-size: 18px
    padding-top: 30px

  p
    font-size: 14px

  h1, p
    text-align: center

  form
    +media-query( all, min-width $tablet )
      width: 50%
      margin-left: 25%

  label
    display: block
    margin-top: 20px

    &:before
      content: '*'
      float: left

  input
    width: 100%
    height: 40px
    border: transparent
    padding: 5px
    radius(3px)
    +placeholder()
        color: $dark-gray
        font-style: italic
        font-size: 12px

  .btn
    width: 100%
    margin-top: 20px
    margin-bottom: 30px
